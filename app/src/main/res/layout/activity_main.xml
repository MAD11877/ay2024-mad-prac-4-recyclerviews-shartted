<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAD Pratical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="32dp"
            android:layout_marginTop="16dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:paddingLeft="100dp" android:paddingRight="100dp"
            android:background="@android:color/holo_purple"
            android:textColor="@color/white" android:textStyle="bold"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/imageView2"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="50dp"
            tools:layout_editor_absoluteX="parent"
            tools:layout_editor_absoluteY="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvView1"

            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="parent"
            tools:layout_editor_absoluteY="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvView1"
            />


        <Button
            android:id="@+id/button1"
            android:layout_width="20mm"
            android:layout_height="8mm"
            android:text="Follow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="20mm"
            android:layout_height="8mm"
            android:text="Message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="16dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:layout_marginTop="35dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:layout_margin="8dp"
            android:textSize="14dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>